# Staging Environment Variables
# This file contains environment variables for staging environment

# Database - Staging database configuration
DATABASE_URL="postgresql://staging:staging@staging-db:5432/mafia_insight_staging?pgbouncer=true&connection_limit=5&pool_timeout=60&connect_timeout=30&sslmode=require"
DIRECT_URL="postgresql://staging:staging@staging-db:5432/mafia_insight_staging"

# Supabase - Staging project
NEXT_PUBLIC_SUPABASE_URL="https://staging-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="staging-anon-key"
SUPABASE_SERVICE_ROLE_KEY="staging-service-role-key"

# NextAuth.js - Staging configuration
NEXTAUTH_URL="https://staging.mafia-insight.com"
NEXTAUTH_SECRET="staging-nextauth-secret"

# OAuth Providers - Staging credentials
GOOGLE_CLIENT_ID="staging-google-client-id"
GOOGLE_CLIENT_SECRET="staging-google-client-secret"
DISCORD_CLIENT_ID="staging-discord-client-id"
DISCORD_CLIENT_SECRET="staging-discord-client-secret"
GITHUB_CLIENT_ID="staging-github-client-id"
GITHUB_CLIENT_SECRET="staging-github-client-secret"

# Redis - Staging Redis instance
REDIS_URL="redis://staging-redis:6379"

# Analytics & Monitoring - Staging configuration
SENTRY_DSN="staging-sentry-dsn"
GOOGLE_ANALYTICS_ID="staging-ga-id"
GOOGLE_SITE_VERIFICATION="staging-google-verification"

# App Configuration
NEXT_PUBLIC_APP_URL="https://staging.mafia-insight.com"
NODE_ENV="staging"

# Rate Limiting - Staging limits
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW="900000"

# Data Sync - Staging configuration
GOMAFIA_API_URL="https://gomafia.pro/api"
SYNC_INTERVAL="300000"
GOMAFIA_BASE_URL="https://gomafia.pro"
SYNC_BATCH_SIZE="50"
SYNC_MAX_RETRIES="3"
SYNC_CRON_SCHEDULE="0 0 * * *"

# Email - Staging SMTP
SMTP_HOST="smtp.staging.com"
SMTP_PORT="587"
SMTP_USER="staging@mafia-insight.com"
SMTP_PASS="staging-smtp-password"

# File Upload - Staging limits
MAX_FILE_SIZE="10485760"
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/webp"

# Security - Staging keys
JWT_SECRET="staging-jwt-secret"
ENCRYPTION_KEY="staging-encryption-key"

# Test Configuration - Staging test settings
TEST_TIMEOUT="30000"
TEST_DATABASE_URL="postgresql://staging:staging@staging-db:5432/mafia_insight_test"
